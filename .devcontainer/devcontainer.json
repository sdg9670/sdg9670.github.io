{
  "name": "Jekyll",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "bash ./init.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "eamodio.gitlens",
        "GitHub.vscode-pull-request-github"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli": "latest"
  },
  "remoteEnv": {
    "TZ": "Asia/Seoul"
  }
}
